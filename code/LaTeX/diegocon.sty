% ------------- Seguro de vida entera (whole life) ------------

% Discreto
\NewDocumentCommand{\wholelife}{O{} m}{\IfNoValueTF{#1}{A_{#2}}{{}^{#1}\!A_{#2}}}
% Continuo
\NewDocumentCommand{\wholelifec}{O{} m}{\IfNoValueTF{#1}{\bar{A}_{#2}}{{}^{#1}\!\bar{A}_{#2}}}
% Discreto m-ésimo
\NewDocumentCommand{\wholelifem}{O{} m m}{\IfNoValueTF{#1}{A_{#2}}{{}^{#1}\!A_{#2}^{(#3)}}}
% Continuo m-ésimo
\NewDocumentCommand{\wholelifemc}{O{} m m}{\IfNoValueTF{#1}{\bar{A}_{#2}}{{}^{#1}\!\bar{A}_{#2}^{(#3)}}}

% ---------------------- Seguro temporal ---------------------

% Discreto
\NewDocumentCommand{\termins}{O{} m m}{\IfNoValueTF{#1}{\lcterm{A}{#2}{#3}}{{}^{#1}\!\lcterm{A}{#2}{#3}}}
% Continuo
\NewDocumentCommand{\terminsc}{O{} m m}{\IfNoValueTF{#1}{\lcterm{\bar{A}}{#2}{#3}}{{}^{#1}\!\lcterm{\bar{A}}{#2}{#3}}}

% ----------------------- Seguro dotal -----------------------

% Discreto
\NewDocumentCommand{\insend}{O{} m m}{\IfNoValueTF{#1}{A_{#2:\lcroof{#3}}}{{}^{#1}\!A_{#2:\lcroof{#3}}}}
% Continuo
\NewDocumentCommand{\insendc}{O{} m m}{\IfNoValueTF{#1}{\bar{A}_{#2:\lcroof{#3}}}{{}^{#1}\!\bar{A}_{#2:\lcroof{#3}}}}
% Dotal puro continuo
\NewDocumentCommand{\pureend}{O{} m m}{\IfNoValueTF{#1}{\lcend{A}{#2}{#3}}{{}^{#1}\!\lcend{A}{#2}{#3}}}
% Dotal puro continuo (nEx)
\newcommand*{\pureendc}[2]{ {}_{#2}E_{#1} }

% -------------- Seguro diferido temporal --------------------
% Temporal continuo
\NewDocumentCommand{\indifc}{O{} m m m}{\IfNoValueTF{#1}{{}_{#2}|\,\terminsc{#3}{#4}}{{}^{#1}{}_{#2}|\,\terminsc{#3}{#4}}}
% Temporal discreto
\NewDocumentCommand{\indif}{O{} m m m}{\IfNoValueTF{#1}{{}_{#2}|\,\termins{#3}{#4}}{{}^{#1}{}_{#2}|\,\termins{#3}{#4}}}

% -------------- Seguro diferido completo --------------------

% Completo continuo
\NewDocumentCommand{\indifwholec}{O{} m m}{\IfNoValueTF{#1}{{}_{#2}|\,\wholelifec{#3}}{{}^{#1}{}_{#2}|\,\wholelifec{#3}}}
% Completo discreto
\NewDocumentCommand{\indifwhole}{O{} m m}{\IfNoValueTF{#1}{{}_{#2}|\,\wholelife{#3}}{{}^{#1}{}_{#2}|\,\wholelife{#3}}}

